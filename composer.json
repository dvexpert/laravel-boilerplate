{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "oneblinkcomm/ppa-pwd-2025",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "inertiajs/inertia-laravel": "^2.0.2",
        "laravel/framework": "^12.13",
        "laravel/tinker": "^2.10.1",
        "tightenco/ziggy": "^2.5.2"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.0.4",
        "fakerphp/faker": "^1.24.1",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.22.1",
        "laravel/sail": "^1.42",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8",
        "pestphp/pest": "^3.8.2",
        "pestphp/pest-plugin-laravel": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "post-install-cmd": [
            "cp scripts/pre-commit .git/hooks/pre-commit",
            "chmod +x .git/hooks/pre-commit"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#fdba74\" \"php artisan serve\" \"yarn dev\" --names=server,vite"
        ],
        "dev:ssr": [
            "yarn build:ssr",
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#fdba74\" \"php artisan serve\" \"php artisan inertia:start-ssr\" --names=server,ssr"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
